textures/neonbeams/orange
{	
	qer_editorimage textures/neonbeams/orange.tga
	q3map_surfacelight 1200
	surfaceparm nolightmap
	qer_trans 0.6
	surfaceparm nomarks
	surfaceparm nonsolid
	surfaceparm trans
	polygonOffset
	nopicmip
	{
		detail
		map textures/neonbeams/orange.tga
			blendfunc GL_ONE GL_ONE
			tcGen base
      		tcmod scroll 5 0
	}
}

